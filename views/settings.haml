%form{:action => "/settings", :method => "post"}

  .input-prepend
    %span(class='add-on')
      %i(class='icon-key')
    %input{:placeholder => "New Password", :id => "user_password", :name => "user[password]", :size => 30, :type => "password" }

  .input-prepend
    %span(class='add-on')
      %i(class='icon-key')
    %input{:placeholder => "Confirm New Password", :id => "user_password_confirmation", :name => "user[password_confirmation]", :size => 30, :type => "password" }

  %br
  %span.alert.alert-block{:style => 'display: inline-block;'}
    .input-append.input-prepend
      %span(class='add-on')
        %i(class='icon-key')
      %input{:placeholder => "Password", :id => "user_old_password", :name => "user[old_password]", :size => 30, :type => "password" }
      %button{:value => "Sign up", :class => 'btn-warning btn', :type => "submit"}
        Apply Changes
        %i(class='loginbox-icon icon-wrench icon-large')
