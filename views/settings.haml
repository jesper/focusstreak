- if @error
  = haml :alert, :locals => {:error => @error}

- if @notice
  = haml :alert, :locals => {:notice => @notice}


%form{:action => "/settings", :method => "post"}
  = Rack::Csrf.csrf_tag(env)

  %span.alert.alert-info{:style => 'display: inline-block;'}
    %h5 Change Password
    .input-prepend
      %span(class='add-on')
        %i(class='icon-key')
      %input{:placeholder => "New Password", :id => "user_password", :name => "user[password]", :size => 30, :type => "password" }

    .input-prepend
      %span(class='add-on')
        %i(class='icon-key')
      %input{:placeholder => "Confirm New Password", :id => "user_password_confirmation", :name => "user[password_confirmation]", :size => 30, :type => "password" }

  %hr

  %span.alert.alert-block{:style => 'display: inline-block; text-align:center;'}
    .input-append.input-prepend
      %span(class='add-on')
        %i(class='icon-key')
      %input{:placeholder => "Current Password", :id => "old_password", :name => "old_password", :size => 30, :type => "password" }
    %button{:value => "Sign up", :class => 'btn-warning btn', :type => "submit", :style => 'margin: auto;'}
      Apply Changes
      %i(class='loginbox-icon icon-wrench icon-large')
