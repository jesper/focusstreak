%form{:action => "/login", :method => "post"}

  = Rack::Csrf.csrf_tag(env)

  .input-prepend.input-block-level
    %span(class='add-on')
      %i(class='fa fa-envelope')
    %input{:id => "user_email", :value => h(@email), :name => "email", :placeholder => "E-Mail", :class => 'span2', :type => 'text'}

  .input-prepend.input-block-level
    %span(class='add-on')
      %i(class='fa fa-key')
    %input{:id => "user_password", :name => "password", :placeholder => "Password", :class => 'span2', :type => "password"}


  %button{:value => "Login", :class => 'btn btn-info', :type => "submit"}
    Login
    %i(class='loginbox-icon fa fa-arrow-right icon-large')

%hr
%a{:href => '/forgot_password'}
  I forgot my password.
